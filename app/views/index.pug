extends template

block content
    h1 Welcome to Crimson Delivery
    form(style='text-align: center')
        h2 Sign up for HSA Dorm Supply Deliveries
        input(type='text' name='name' placeholder='Name') 
        br
        input(type='email' name='email' placeholder='Email') 
        br
        input(type='number' name='classYear' placeholder='Class year') 
        br
        input(type='phone' name='phone' placeholder='Phone Number') 
        br
        input(type='text' name='phoneProvider' placeholder='Phone Provider') 
        br
        input(type='password' name='password' placeholder='*******') 
        br
        button(type='button' onclick ="register()") Register


